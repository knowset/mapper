{
    "name": "@knowset/mapper",
    "version": "0.0.2",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "scripts": {
        "build": "npm run build:esm && npm run build:cjs && npm run build:cpp",
        "jsbuild": "npm run build:esm && npm run build:cjs",
