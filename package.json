    "dependencies": {
        "@turf/explode": "^6.5.0",
        "@turf/helpers": "^6.5.0",
        "@turf/turf": "^6.5.0",
        "bindings": "^1.5.0",
        "cmake-js": "^7.2.1",
        "mocha": "^10.2.0",
        "node-addon-api": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.8.9",
